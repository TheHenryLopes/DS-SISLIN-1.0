<Window x:Class="SISLIN_1._0._2PAGAMENTOS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SISLIN_1._0"
        mc:Ignorable="d"
        Title="_2PAGAMENTOS" Height="450" Width="800">
    <Grid Margin="101,21,-101,-21">
        <Grid.RowDefinitions>
            <RowDefinition Height="248*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="171*"/>
        </Grid.RowDefinitions>
        <Grid Margin="-97,32,127,-19" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="233*"/>
                <ColumnDefinition Width="148*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="1" Margin="-14,-56,-27,40" Grid.ColumnSpan="2">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#7BE9F6" Offset="0.0"/>
                        <GradientStop Color="#C490E4" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>





            <Button x:Name="confirmar" Content="Confirmar Compra" HorizontalAlignment="Left" 
                Margin="410,310,0,55" Width="175" 
                Background="#FF969696" 
                FontSize="20" FontFamily="Helvetica" Foreground="White" Grid.ColumnSpan="2">
                <Button.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF080707" Offset="1"/>
                    </LinearGradientBrush>
                </Button.BorderBrush>
            </Button>


            <Button x:Name="cancela" Content="Cancelar" HorizontalAlignment="Left" 
                Margin="88,310,0,55" Width="122" 
                Background="#FF969696" BorderBrush="#FF0E0D0D" 
                FontSize="20" FontFamily="Helvetica" 
                Foreground="White"/>
            <TextBox x:Name="banco" HorizontalAlignment="Left" Height="26" Margin="37,-35,0,0" TextWrapping="Wrap" Text="Banco" VerticalAlignment="Top" Width="117" Background="Transparent" 
                BorderBrush="White" FontSize="25" 
                FontFamily="Helvetica" Foreground="White" Opacity="0.8" FontStyle="Italic"/>
            <ComboBox HorizontalAlignment="Left" Height="26" Margin="37,-9,0,0" VerticalAlignment="Top" Width="117" RenderTransformOrigin="0.5,0.5">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FF8C8C8C" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
            </ComboBox>
            <TextBox x:Name="codigo1" HorizontalAlignment="Left" Height="23" Margin="191,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="codigo1_TextChanged" Background="Transparent" 
                BorderBrush="#FF0C0B0B" FontSize="25" 
                FontFamily="Helvetica" Foreground="White"  Opacity="0.8"/>
            <TextBox x:Name="nome1" HorizontalAlignment="Left" Height="23" Margin="191,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.766,0.462" Background="Transparent" 
                BorderBrush="#FF060606" FontSize="25" 
                FontFamily="Helvetica" Foreground="White"  Opacity="0.8"/>
            <Label Content="TITULAR DO CARTÃO" HorizontalAlignment="Left" Margin="29,53,0,0" VerticalAlignment="Top" Background="#FFDAD2D2"/>
            <Label Content="Número do Cartão" HorizontalAlignment="Left" Margin="28,114,0,0" VerticalAlignment="Top" Background="#FFDAD2D2"/>
            <Label Content="Número da Agência" HorizontalAlignment="Left" Margin="21,166,0,0" VerticalAlignment="Top" Background="#FFDAD2D2"/>
        </Grid>
        <ComboBox x:Name="parc" HorizontalAlignment="Left" Margin="345,27,0,0" VerticalAlignment="Top" Width="95" FontSize="16" Height="27"/>
        <TextBox x:Name="parcelas" HorizontalAlignment="Left" Height="23" Margin="345,4,0,0" TextWrapping="Wrap" Text="Parcelas" VerticalAlignment="Top" Width="95" Background="Transparent" 
                BorderBrush="White" FontSize="25" 
                FontFamily="Helvetica" Foreground="White"  Opacity="0.8" FontStyle="Italic"/>
        <TextBox x:Name="agen_" HorizontalAlignment="Left" Height="23" Margin="92,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.493,2.373" Background="Transparent" 
                BorderBrush="Black" FontSize="25" 
                FontFamily="Helvetica" Foreground="White" Opacity="0.8"/>
    </Grid>
</Window>

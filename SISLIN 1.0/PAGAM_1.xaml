            <RadioButton Content="Cartão de Crédito" HorizontalAlignment="Left" Margin="175,216,0,0" VerticalAlignment="Top" Background="#FFFFFEFE" BorderBrush="#FF151515" Height="19" Width="148" FontSize="16"/>
            <RadioButton x:Name="bol_" Content="Boleto" HorizontalAlignment="Left" Margin="96,212,0,0" VerticalAlignment="Top" FontSize="16" Background="White" BorderBrush="Black"/>
        </Grid>

        <TextBox x:Name="formas" HorizontalAlignment="Left" Height="30" Margin="19,176,0,0" TextWrapping="Wrap" Text="formas de pagamento" VerticalAlignment="Top" Width="188" FontSize="18" Background="#FFC5BFBF"/>
        <Label Content="Código da Compra" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" Background="#FFDAD2D2" Height="26" Width="110"/>
        <Label Content="Nome do Comprador" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top" Background="#FFDAD2D2" Height="26" Width="124"/>
        <Label Content="Tipo de Compra" HorizontalAlignment="Left" Margin="334,48,0,0" VerticalAlignment="Top" Background="#FFDAD2D2" Width="115" Height="26"/>

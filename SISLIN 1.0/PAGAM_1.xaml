            </ComboBox>
            <TextBox x:Name="codigo1" HorizontalAlignment="Left" Height="30" Margin="125,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96"/>
            <TextBox x:Name="nome1" HorizontalAlignment="Left" Height="28" Margin="125,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123" RenderTransformOrigin="0.766,0.462"/>
